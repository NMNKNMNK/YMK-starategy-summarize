    <script>
        function toggleMenu() {
            const overlay = document.getElementById('menuOverlay');
            const sidebar = document.getElementById('menuSidebar');
            
            overlay.style.display = 'block';
            sidebar.classList.add('open');
        }

        function closeMenu() {
            const overlay = document.getElementById('menuOverlay');
            const sidebar = document.getElementById('menuSidebar');
            
            overlay.style.display = 'none';
            sidebar.classList.remove('open');
        }

        function showPage(pageId) {
            // å…¨ã¦ã®ãƒšãƒ¼ã‚¸ã‚’éè¡¨ç¤º
            const pages = document.querySelectorAll('.page');
            pages.forEach(page => {
                page.classList.remove('active');
            });
            
            // æŒ‡å®šã•ã‚ŒãŸãƒšãƒ¼ã‚¸ã‚’è¡¨ç¤º
            document.getElementById(pageId).classList.add('active');
            
            // ãƒ¡ãƒ‹ãƒ¥ãƒ¼ã‚’é–‰ã˜ã‚‹
            closeMenu();
        }

        // ãƒšãƒ¼ã‚¸èª­ã¿è¾¼ã¿æ™‚ã«ãƒ­ãƒ¼ã‚«ãƒ«ã‚¹ãƒˆãƒ¬ãƒ¼ã‚¸ã‹ã‚‰ä¿å­˜ã•ã‚ŒãŸãƒ‡ãƒ¼ã‚¿ã‚’å¾©å…ƒ
        window.addEventListener('load', function() {
            const textareas = document.querySelectorAll('textarea');
            textareas.forEach((textarea, index) => {
                const saved = localStorage.getItem(`ymk-textarea-${index}`);
                if (saved) {
                    textarea.value = saved;
                }
                
                // ãƒ†ã‚­ã‚¹ãƒˆã‚¨ãƒªã‚¢ã®å¤‰æ›´ã‚’è‡ªå‹•ä¿å­˜
                textarea.addEventListener('input', function() {
                    localStorage.setItem(`ymk-textarea-${index}`, this.value);
                });
            });
        });

        // ã‚¨ã‚¹ã‚±ãƒ¼ãƒ—ã‚­ãƒ¼ã§ãƒ¡ãƒ‹ãƒ¥ãƒ¼ã‚’é–‰ã˜ã‚‹
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeMenu();
            }
        });
    </script>
</body>
